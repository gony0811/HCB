<telerik:RadWindow x:Class="HCB.UI.UPasswordNPad"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HCB.UI"
        mc:Ignorable="d" 
        Height="500" Width="450"
        Style="{StaticResource RadWindowStyle}"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">

    <telerik:RadWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/SYSTEM/Common/Styles/PasswordPadStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </telerik:RadWindow.Resources>
    <Border Style="{StaticResource KeyPad.Main}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Grid.Row="0" Style="{StaticResource KeyPad.TextBlock}" Height="40" TextAlignment="Center" 
               Text="{Binding Title, RelativeSource={RelativeSource AncestorType=Window}}" FontSize="20"/>

            <!-- 입력 결과(읽기전용) -->
            <TextBox x:Name="tbInput"
             Grid.Row="1" Style="{StaticResource KeyPad.TextBox}"
             Height="40" FontSize="20" VerticalAlignment="Center"
             IsReadOnly="True" />

            <Border Grid.Row="2" Style="{StaticResource KeyPad.Panel}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <!-- 숫자 -->
                    <Button Content="7" Style="{StaticResource KeyPad}" Grid.Column="0" Grid.Row="0" Margin="4" Click="OnDigitClick"/>
                    <Button Content="8" Style="{StaticResource KeyPad}" Grid.Column="1" Grid.Row="0" Margin="4" Click="OnDigitClick"/>
                    <Button Content="9" Style="{StaticResource KeyPad}" Grid.Column="2" Grid.Row="0" Margin="4" Click="OnDigitClick"/>

                    <Button Content="4" Style="{StaticResource KeyPad}" Grid.Column="0" Grid.Row="1" Margin="4" Click="OnDigitClick"/>
                    <Button Content="5" Style="{StaticResource KeyPad}" Grid.Column="1" Grid.Row="1" Margin="4" Click="OnDigitClick"/>
                    <Button Content="6" Style="{StaticResource KeyPad}" Grid.Column="2" Grid.Row="1" Margin="4" Click="OnDigitClick"/>

                    <Button Content="3" Style="{StaticResource KeyPad}" Grid.Column="0" Grid.Row="2" Margin="4" Click="OnDigitClick"/>
                    <Button Content="2" Style="{StaticResource KeyPad}" Grid.Column="1" Grid.Row="2" Margin="4" Click="OnDigitClick"/>
                    <Button Content="1" Style="{StaticResource KeyPad}" Grid.Column="2" Grid.Row="2" Margin="4" Click="OnDigitClick"/>

                    <Button Content="0" Style="{StaticResource KeyPad}" Grid.Column="0" Grid.Row="3" Margin="4" Click="OnDigitClick"/>

                    <!-- 기능키 -->
                    <Button Content="◀"     Style="{StaticResource KeyPad}" Grid.Column="3" Grid.Row="0" Grid.ColumnSpan="2" Margin="4" Click="OnBackspace"/>
                    <Button Content="Clear"  Style="{StaticResource KeyPad}" Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="2" Margin="4" Click="OnClear"/>
                    <Button Content="Enter"  Style="{StaticResource KeyPad}" Grid.Column="3" Grid.Row="1" Grid.RowSpan="2" Grid.ColumnSpan="2" Margin="4" Click="OnEnter"/>
                    <Button Content="Cancel" Style="{StaticResource KeyPad}" Grid.Column="3" Grid.Row="3" Grid.ColumnSpan="2" Margin="4" Click="OnCancel"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
        
</telerik:RadWindow>
