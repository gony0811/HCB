<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/SYSTEM/COMMON/Styles/Palette.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="MainPanel"  TargetType="Border">
        <Setter Property="Background" Value="{StaticResource Brush.Panel}"></Setter>
    </Style>
    
    <Style  x:Key="Tb" TargetType="TextBlock">
        <Setter Property="Foreground" Value="White"></Setter>
    </Style>

    <Style x:Key="ValueInfoBox" TargetType="TextBox">
        <Setter Property="TextAlignment" Value="Right"></Setter>
        <Setter Property="Background" Value="{StaticResource Brush.Input.Bg}"></Setter>
        <Setter Property="Margin" Value="0,0,0,8"></Setter>
    </Style>

    <Style x:Key="NumberButton" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource Btn.Bg}"></Setter>
        <Setter Property="Margin" Value="2"></Setter>
    </Style>

    <Style x:Key="CommandButton" TargetType="Button">
        <Setter Property="Background" Value="Gray"></Setter>
        <Setter Property="Margin" Value="2"></Setter>
    </Style>
</ResourceDictionary>