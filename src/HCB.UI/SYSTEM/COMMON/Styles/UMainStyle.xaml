<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/SYSTEM/COMMON/Styles/Palette.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="WindowBg" TargetType="Grid">
        <Setter Property="Background" Value="{StaticResource DG.Separator}"/>
    </Style>

    <Style x:Key="MenuBtn" TargetType="telerik:RadToggleButton">
        <Setter Property="MinHeight" Value="80"/>
        <Setter Property="MinWidth" Value="120"/>
        <Setter Property="Margin" Value="2,0,0,0"/>
        <Setter Property="IsHitTestVisible" Value="True"/>
        <Style.Triggers>
            <Trigger Property="IsChecked" Value="True">
                <Setter Property="IsHitTestVisible" Value="False"/>
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>

