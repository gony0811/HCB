<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/SYSTEM/COMMON/Styles/Palette.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!-- 1) 원형 버튼 -->
    <Style x:Key="Button.Circle" TargetType="telerik:RadButton">
        <Setter Property="Background" Value="{StaticResource Btn.Circle.Bg}"/>
        <Setter Property="Foreground" Value="{StaticResource Btn.Circle.Fg}"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid SnapsToDevicePixels="True">
                        <Ellipse x:Name="bg" Fill="{TemplateBinding Background}"/>
                        <ContentPresenter HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              RecognizesAccessKey="True"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="bg" Property="Fill" Value="{StaticResource Btn.Circle.Bg.Hover}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="bg" Property="Fill" Value="{StaticResource Btn.Circle.Bg.Down}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Foreground" Value="#80FFFFFF"/>
                            <Setter TargetName="bg" Property="Fill" Value="#1AFFFFFF"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- 2) 이중 테두리 원형 버튼 -->
    <Style x:Key="Button.Circle.WithRing"
       TargetType="telerik:RadButton"
       BasedOn="{StaticResource Button.Circle}">
        <Setter Property="Padding" Value="6"/>
        <!-- 정사각형 유지(원형 보장). 필요 없으면 제거 -->
        <Setter Property="Width" Value="56"/>
        <Setter Property="Height" Value="56"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid SnapsToDevicePixels="True">
                        <!-- 바깥 큰 원 -->
                        <Ellipse x:Name="outer" Fill="{StaticResource Btn.Circle.Outer}"/>

                        <!-- 안쪽 작은 원 : Padding만큼 줄어든 원 -->
                        <Ellipse x:Name="inner"
                   Fill="{TemplateBinding Background}"
                   Margin="{TemplateBinding Padding}"/>

                        <!-- 콘텐츠 -->
                        <ContentPresenter HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            RecognizesAccessKey="True"/>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="inner" Property="Fill" Value="{StaticResource Btn.Circle.Bg.Hover}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="inner" Property="Fill" Value="{StaticResource Btn.Circle.Bg.Down}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Foreground" Value="#80FFFFFF"/>
                            <Setter TargetName="inner" Property="Fill" Value="#1AFFFFFF"/>
                            <Setter TargetName="outer" Property="Fill" Value="#1A16233B"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


</ResourceDictionary>
