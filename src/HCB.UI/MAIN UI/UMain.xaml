<Window x:Class="HCB.UI.UMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        xmlns:local="clr-namespace:HCB.UI"
        mc:Ignorable="d"
        WindowStyle="ThreeDBorderWindow"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip" 
        telerik:StyleManager.Theme="Windows11" Closed="Window_Closed">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/SYSTEM/COMMON/Styles/UMainStyle.xaml"></ResourceDictionary>
                <ResourceDictionary>
                    <Thickness x:Key="SubPageMargin">10</Thickness>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Style="{StaticResource WindowBg}">
         <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="*"/>
        <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <Border Grid.Row="0">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Content="LOGO" Width="150" Height="60" Margin="5"/>
            <WrapPanel Grid.Column="1" Orientation="Vertical" VerticalAlignment="Center" Margin="3">
                <StackPanel Orientation="Horizontal">
                    <TextBlock  Text="THREAD :"/>
                    <TextBlock x:Name="tbThread" Text="{Binding ThreadText}" VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="TIME :"/>
                    <TextBlock x:Name="tbTime" Text="{Binding TimeText}" VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="LOG IN LEVEL :"/>
                    <TextBlock x:Name="tbUser"  Text="{Binding UserService.CurrentAuthority.Name, TargetNullValue=--, FallbackValue=--}" VerticalAlignment="Center"/>
                </StackPanel>
            </WrapPanel>

            <TextBlock  Grid.Column="3" x:Name="tbStatus" Text="{Binding StatusText}" FontSize="36" VerticalAlignment="Center" Width="Auto" TextAlignment="Center"/>
            <WrapPanel Grid.Column="4" Orientation="Vertical" VerticalAlignment="Center" Margin="3">
                <TextBlock  x:Name="tbBuild" Text="{Binding BuildText}" TextAlignment="Right"/>
                <TextBlock  x:Name="tbDeveloper" Text="{Binding DeveloperText}" TextAlignment="Right"/>
                <TextBlock  x:Name="tbSerialNumber" Text="{Binding SerialNumberText}" TextAlignment="Right"/>
            </WrapPanel>
        </Grid>
    </Border>

    <Grid Grid.Row="1" Margin="{StaticResource SubPageMargin}">
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" JournalOwnership="OwnsJournal" Content="{Binding CurrentPage}"/>
    </Grid>

    <Grid Grid.Row="2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="8">
                <StackPanel.Resources>
                    <local:KeyEqualsConverter x:Key="KeyEquals"/>
                </StackPanel.Resources>


                <telerik:RadToggleButton            
                        Tag="MAIN"
                        Command="{Binding NavigateCommand}"
                        CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Tag}"
                        IsChecked="{Binding SelectedPageKey, Converter={StaticResource KeyEquals}, ConverterParameter=MAIN}"
                        IsEnabled="{Binding NavVM.MainEnabled}"
                        Style="{StaticResource MenuBtn}">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <telerik:RadGlyph Glyph="&#xe690;" 
                  Width="24" Height="24" 
                  Margin="0,0,0,5" 
                  HorizontalAlignment="Center" />
                        <TextBlock Text="메인" TextAlignment="Center"/>
                    </StackPanel>
                </telerik:RadToggleButton>

                <telerik:RadToggleButton Tag="PARAMETER"
                        Command="{Binding NavigateCommand}"
                        CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Tag}"
                        IsChecked="{Binding SelectedPageKey, Converter={StaticResource KeyEquals}, ConverterParameter=PARAMETER}"
                        IsEnabled="{Binding NavVM.ParameterEnabled}"
                        Style="{StaticResource MenuBtn}">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <telerik:RadGlyph Glyph="&#xe13a;" 
                  Width="24" Height="24" 
                  Margin="0,0,0,5" 
                  HorizontalAlignment="Center"/>

                        <TextBlock Text="파라미터" TextAlignment="Center"/>
                    </StackPanel>
                </telerik:RadToggleButton>

                <telerik:RadToggleButton Tag="USER"
                        Command="{Binding NavigateCommand}"
                        CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Tag}"
                        IsChecked="{Binding SelectedPageKey, Converter={StaticResource KeyEquals}, ConverterParameter=USER}"
                        IsEnabled="{Binding NavVM.UserEnabled}"
                        Style="{StaticResource MenuBtn}">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <telerik:RadGlyph Glyph="&#xe801;" 
                  Width="24" Height="24" 
                  Margin="0,0,0,5" 
                  HorizontalAlignment="Center"/>

                        <TextBlock Text="사용자" TextAlignment="Center"/>
                    </StackPanel>
                </telerik:RadToggleButton>

                <telerik:RadToggleButton Tag="LOG"
                            Command="{Binding NavigateCommand}"
                            CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Tag}"
                            IsChecked="{Binding SelectedPageKey, Converter={StaticResource KeyEquals}, ConverterParameter=LOG}"
                            IsEnabled="{Binding NavVM.LogEnabled}"
                          Style="{StaticResource MenuBtn}">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <telerik:RadGlyph Glyph="&#xe924;" 
                  Width="24" Height="24" 
                  Margin="0,0,0,5" 
                  HorizontalAlignment="Center"/>

                        <TextBlock Text="로그" TextAlignment="Center"/>
                    </StackPanel>
                </telerik:RadToggleButton>
                <telerik:RadToggleButton Tag="ALARM"
                        Command="{Binding NavigateCommand}"
                        CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Tag}"
                        IsChecked="{Binding SelectedPageKey, Converter={StaticResource KeyEquals}, ConverterParameter=ALARM}"
                        IsEnabled="{Binding NavVM.AlarmEnabled}"
                          Style="{StaticResource MenuBtn}">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <telerik:RadGlyph Glyph="&#xe400;" 
                  Width="24" Height="24" 
                  Margin="0,0,0,5" 
                  HorizontalAlignment="Center"
                  Foreground="Orange"/>

                        <TextBlock Text="알람 정의" TextAlignment="Center"/>
                    </StackPanel>
                </telerik:RadToggleButton>
                <telerik:RadToggleButton Tag="MOTION"
                            Command="{Binding NavigateCommand}"
                            CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Tag}"
                            IsChecked="{Binding SelectedPageKey, Converter={StaticResource KeyEquals}, ConverterParameter=MOTION}"
                           IsEnabled="{Binding NavVM.MotionEnabled}"
                          Style="{StaticResource MenuBtn}"
                          >
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <telerik:RadGlyph Glyph="&#xea17;"
                  Width="24" Height="24" 
                  Margin="0,0,0,5" 
                  HorizontalAlignment="Center"
                  Foreground="DodgerBlue"/>

                        <TextBlock Text="모션" TextAlignment="Center"/>
                    </StackPanel>
                </telerik:RadToggleButton>
                <telerik:RadToggleButton Tag="IO"
                            Command="{Binding NavigateCommand}"
                            CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Tag}"
                            IsChecked="{Binding SelectedPageKey, Converter={StaticResource KeyEquals}, ConverterParameter=IO}"
                           IsEnabled="{Binding NavVM.IOEnabled}"
                          Style="{StaticResource MenuBtn}">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <telerik:RadGlyph Glyph="&#xe934;" 
                  Width="24" Height="24" 
                  Margin="0,0,0,5" 
                  HorizontalAlignment="Center"
                  Foreground="SteelBlue"/>

                        <TextBlock Text="I/O" TextAlignment="Center"/>
                    </StackPanel>
                </telerik:RadToggleButton>

                <telerik:RadToggleButton Tag="DEVICE"
                         Command="{Binding NavigateCommand}"
                         CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Tag}"
                         IsChecked="{Binding SelectedPageKey, Converter={StaticResource KeyEquals}, ConverterParameter=DEVICE}"
                         IsEnabled="{Binding NavVM.DeviceEnabled}"
                         Visibility="Visible"
                         Style="{StaticResource MenuBtn}">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <!-- 아이콘 -->
                        <telerik:RadGlyph Glyph="&#xe13c;" Width="24" Height="24" Margin="0,0,0,5"/>
                        <!-- 텍스트 -->
                        <TextBlock Text="Device" HorizontalAlignment="Center"/>
                    </StackPanel>
                </telerik:RadToggleButton>

            </StackPanel>

            <StackPanel Grid.Column="1" HorizontalAlignment="Right" Margin="5">
                <telerik:RadButton x:Name="Exit" MinHeight="80" MinWidth="120">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <telerik:RadGlyph Glyph="&#xe11c;" Width="24" Height="24" Margin="0,0,0,5"/>
                        <TextBlock Text="종료" TextAlignment="Center"/>
                    </StackPanel>
                </telerik:RadButton>
            </StackPanel>
        </Grid>


</Grid>
</Window>
