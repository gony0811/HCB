<UserControl x:Class="HCB.UI.TitleBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HCB.UI"
             mc:Ignorable="d" 
             Style="{StaticResource CardDataFieldStretchedContentControl}"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <!-- 왼쪽 포인트 바 -->
                <telerik:MapRectangle Width="5" Height="24" RadiusX="2" RadiusY="2" Margin="12,0,8,0"/>
                <telerik:HighlightTextBlock Text="{Binding Title, ElementName=root}"
                        FontSize="24" FontWeight="SemiBold"
                        VerticalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
