<Window x:Class="HCB.UI.ConfirmModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HCB.UI"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        MinWidth="380" MinHeight="180"
        WindowStyle="None">
    <Border Padding="16">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 커스텀 타이틀(창 타이틀과 동일 텍스트) -->
            <telerik:HighlightTextBlock Grid.Row="0"
                                        Style="{StaticResource HighlightTextBlockStyle}"
                                        Text="{Binding TitleText, RelativeSource={RelativeSource AncestorType=Window}}"
                                        TextAlignment="Center"
                                        FontSize="18"
                                        FontWeight="SemiBold"
                                        Margin="0,0,0,8"/>

            <!-- 본문 -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <telerik:HighlightTextBlock Text="{Binding MessageText, RelativeSource={RelativeSource AncestorType=Window}}"
                                            Style="{StaticResource HighlightTextBlockStyle}"
                                            TextAlignment="Center"
                                            TextWrapping="Wrap"
                                            LineHeight="22"/>
            </ScrollViewer>

            <!-- 버튼 -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                <telerik:RadButton Content="확인" Width="90" Height="36" Margin="0,0,8,0" Style="{StaticResource RadButtonStyle}"
                     IsDefault="True"
                     Click="OnOkClick"/>
                <telerik:RadButton Content="취소" Width="90" Height="36" Style="{StaticResource RadButtonStyle}" IsCancel="True"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
