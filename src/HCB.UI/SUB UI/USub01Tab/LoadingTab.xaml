<UserControl x:Class="HCB.UI.LoadingTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             xmlns:local="clr-namespace:HCB.UI"
             xmlns:uc="clr-namespace:HCB.UI"
             xmlns:vm="clr-namespace:HCB.UI"
             x:Name="root"
             mc:Ignorable="d" >

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/SYSTEM/COMMON/Styles/DefaultResource.xaml"/>
                <ResourceDictionary>
                    <Thickness x:Key="ControlMargin">5 5 0 0</Thickness>
                </ResourceDictionary> 

            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <telerik:GroupBox Header="D-Table" Margin="4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="AUTO"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="AUTO"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid>
                    <WrapPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <telerik:RadButton Grid.Row="0" Width="100" Height="80" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="{StaticResource ControlMargin}">
                            <telerik:HighlightTextBlock TextAlignment="Center" Margin="5">
                                LOADING
                                <LineBreak/> POS
                            </telerik:HighlightTextBlock>
                        </telerik:RadButton>
                        <telerik:RadButton Grid.Row="1" Width="100" Height="80"  HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="{StaticResource ControlMargin}">
                            <telerik:HighlightTextBlock TextAlignment="Center" Margin="5">
                                READY
                                <LineBreak/> POS
                            </telerik:HighlightTextBlock>
                        </telerik:RadButton>
                    </WrapPanel>

                </Grid>
                <ItemsControl ItemsSource="{Binding DTableList}" Grid.Column="1" Margin="5">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <telerik:RadUniformGrid Columns="3" Margin="5" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <!-- 📌 각 셀의 디자인 -->
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type vm:SensorIoItemViewModel}">
                            <Border BorderBrush="#16233B"
                                    BorderThickness="0"
                                    CornerRadius="6">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <telerik:HighlightTextBlock Text="{Binding Name}"
                                               Margin="5"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Center"
                                                Foreground="White"
                                                FontWeight="SemiBold"
                                                FontSize="18"/>
                                    <!-- 토글 -->
                                    <uc:IoPillToggle
                                            Grid.Column="1"
                                            IsChecked="{Binding IsChecked, Mode=TwoWay}"
                                            IsReadOnly="{Binding IsReadOnly}"
                                            Command="{Binding ToggleCommand}"
                                            CommandParameter="{Binding}"/>
                                </StackPanel>
                                    <!-- 센서 이름 -->
                                    
                                
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <StackPanel Orientation="Horizontal" Grid.Column="2" VerticalAlignment="Center">
                    <telerik:RadButton Content="ALL ON" Height="80" Width="100"  HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="{StaticResource ControlMargin}" ></telerik:RadButton>
                    <telerik:RadButton Content="ALL OFF" Height="80" Width="100" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="{StaticResource ControlMargin}" ></telerik:RadButton>
                </StackPanel>
            </Grid>

        </telerik:GroupBox>
        <telerik:GroupBox  Header="W-Table" Grid.Row="1" Margin="4" >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <WrapPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <telerik:RadButton Grid.Row="0" Height="80" Width="100"  HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="{StaticResource ControlMargin}"  >
                        <telerik:HighlightTextBlock TextAlignment="Center" Margin="5">
                            LOADING
                            <LineBreak/> POS
                        </telerik:HighlightTextBlock>
                    </telerik:RadButton>
                    <telerik:RadButton Grid.Row="1" Height="80" Width="100" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="{StaticResource ControlMargin}"  >
                        <telerik:HighlightTextBlock TextAlignment="Center" Margin="5">
                            WORKING
                            <LineBreak/> POS
                        </telerik:HighlightTextBlock>
                    </telerik:RadButton>
                </WrapPanel>



                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10 0 0 10">
                    <telerik:RadButton Content="Die" Width="100" Height="80" Margin="{StaticResource ControlMargin}"  ></telerik:RadButton>
                    <telerik:RadButton Content="4 inch" Width="100" Height="80" Margin="{StaticResource ControlMargin}"  ></telerik:RadButton>
                    <telerik:RadButton Content="6 inch" Width="100" Height="80" Margin="{StaticResource ControlMargin}"  ></telerik:RadButton>
                    <telerik:RadButton Content="8 inch" Width="100" Height="80" Margin="{StaticResource ControlMargin}"  ></telerik:RadButton>
                    <telerik:RadButton Content="12 inch" Width="100" Height="80" Margin="{StaticResource ControlMargin}"  ></telerik:RadButton>
                </StackPanel>
                <telerik:RadButton Content="All Off" Grid.Column="2" Width="120" Height="80" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{StaticResource ControlMargin}"  ></telerik:RadButton>
            </Grid>
        </telerik:GroupBox>
    </Grid>
</UserControl>
