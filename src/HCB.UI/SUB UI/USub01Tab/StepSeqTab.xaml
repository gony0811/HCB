<UserControl x:Class="HCB.UI.StepSeqTab"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
      xmlns:local="clr-namespace:HCB.UI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      >
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/SYSTEM/COMMON/Styles/DefaultResource.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <telerik:RadTabControl Style="{StaticResource RadTabControlStyle}">
        <telerik:RadTabItem Style="{StaticResource RadTabItemStyle}" Width="100" Header="PRE-STEP" Margin="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
                    <telerik:RadButton Style="{StaticResource RadButtonStyle}" Width="150" Height="50" Margin="4" Command="{Binding StepWaferAlignCommand}">
                        <telerik:HighlightTextBlock Text="Wafer Align"/>
                    </telerik:RadButton>
                    <telerik:RadButton Style="{StaticResource RadButtonStyle}" Width="150" Height="50" Margin="4" Command="{Binding StepDieAlignCommand}">
                        <telerik:HighlightTextBlock Text="Die Align"/>
                    </telerik:RadButton>
                    <telerik:RadButton Style="{StaticResource RadButtonStyle}" Width="150" Height="50" Margin="4" Command="{Binding StepDieAlignCommand}">
                        <telerik:HighlightTextBlock Text="Die Align"/>
                    </telerik:RadButton>
                </StackPanel>
            </Grid>
        </telerik:RadTabItem>

        <telerik:RadTabItem Style="{StaticResource RadTabItemStyle}" Width="100" Header="STEP 1" Margin="{StaticResource TabItemMargin}">
            <Grid local:GridHelper.Columns="1*, 1*" local:GridHelper.Rows="Auto, *, Auto">
                <telerik:GroupBox Style="{StaticResource GroupBoxStyle}" Header="STEP PROCESS" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Margin="4">
                    <StackPanel Orientation="Vertical">
                        <WrapPanel Orientation="Horizontal" Margin="{StaticResource ControlMargin}">
                            <local:StepLamp Style="{StaticResource StepLampStyle}" State="{Binding SequenceServiceVM.StepWaferCenterMoveCompleted }" Margin="{StaticResource ControlMargin}"/>
                            <telerik:HighlightTextBlock Style="{StaticResource HighlightTextBlockStyle}" Text="Move Wafer Center" FontSize="14" Width="150" Margin="{StaticResource ControlMargin}"/>
                            <telerik:HighlightTextBlock Style="{StaticResource HighlightTextBlockStyle}" Text="{Binding SequenceServiceVM.StepWaferCenterMoveElapsedTime}" Width="50" Margin="{StaticResource ControlMargin}"/>
                        </WrapPanel>

                        <WrapPanel Orientation="Horizontal" Margin="{StaticResource ControlMargin}">
                            <local:StepLamp Style="{StaticResource StepLampStyle}" State="{Binding SequenceServiceVM.StepWaferMacroAlignCompleted }" Margin="{StaticResource ControlMargin}"/>
                            <telerik:HighlightTextBlock Style="{StaticResource HighlightTextBlockStyle}" Text="Wafer Macro Align" FontSize="14" Width="150" Margin="{StaticResource ControlMargin}"/>
                            <telerik:HighlightTextBlock Style="{StaticResource HighlightTextBlockStyle}" Text="{Binding SequenceServiceVM.StepWaferMacroAlignElapsedTime}" Width="50" Margin="{StaticResource ControlMargin}"/>
                        </WrapPanel>
                    </StackPanel>
                    
                </telerik:GroupBox>

                <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="2">
                    <telerik:RadButton Style="{StaticResource RadButtonStyle}" Width="150" Height="50" Margin="4" Command="{Binding StepStartCommand}">
                        <telerik:HighlightTextBlock Text="START" Margin="{StaticResource ControlMargin}"/>
                    </telerik:RadButton>

                    <telerik:RadButton Style="{StaticResource RadButtonStyle}" Width="150" Height="50" Margin="4" Command="{Binding StepStartCommand}">
                        <telerik:HighlightTextBlock Text="STOP" Margin="{StaticResource ControlMargin}"/>
                    </telerik:RadButton>
                </StackPanel>
            </Grid>
        </telerik:RadTabItem>

        <telerik:RadTabItem Style="{StaticResource RadTabItemStyle}" Width="100" Header="STEP 2" Margin="{StaticResource TabItemMargin}">

        </telerik:RadTabItem>

        <telerik:RadTabItem Style="{StaticResource RadTabItemStyle}" Width="100" Header="STEP 3" Margin="{StaticResource TabItemMargin}">

        </telerik:RadTabItem>

        <telerik:RadTabItem Style="{StaticResource RadTabItemStyle}" Width="100" Header="STEP 4" Margin="{StaticResource TabItemMargin}">

        </telerik:RadTabItem>

        <telerik:RadTabItem Style="{StaticResource RadTabItemStyle}" Width="100" Header="BONDING" Margin="{StaticResource TabItemMargin}">

        </telerik:RadTabItem>

    </telerik:RadTabControl>

       
</UserControl>
