<UserControl x:Class="HCB.UI.StepSeqTab"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
      xmlns:local="clr-namespace:HCB.UI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      >

    <telerik:RadTabControl Style="{StaticResource RadTabControlStyle}">
        <telerik:RadTabItem Style="{StaticResource RadTabItemStyle}" Width="100" FontSize="10" Header="PRE-STEP">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
                    <telerik:RadButton Style="{StaticResource RadButtonStyle}" Width="150" Height="50" Margin="4" Command="{Binding StepWaferAlignCommand}">
                        <telerik:HighlightTextBlock Text="Wafer Align"/>
                    </telerik:RadButton>
                    <telerik:RadButton Style="{StaticResource RadButtonStyle}" Width="150" Height="50" Margin="4" Command="{Binding StepDieAlignCommand}">
                        <telerik:HighlightTextBlock Text="Die Align"/>
                    </telerik:RadButton>
                    <telerik:RadButton Style="{StaticResource RadButtonStyle}" Width="150" Height="50" Margin="4" Command="{Binding StepDieAlignCommand}">
                        <telerik:HighlightTextBlock Text="Die Align"/>
                    </telerik:RadButton>
                </StackPanel>
            </Grid>
        </telerik:RadTabItem>

        <telerik:RadTabItem Style="{StaticResource RadTabItemStyle}" Width="100" Header="STEP 1">
            <Grid local:GridHelper.Columns="1*, 1*" local:GridHelper.Rows="Auto, Auto, Auto">
                <WrapPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="0">
                    <telerik:CheckBoxControl Style="{StaticResource CheckBoxControlStyle}" IsHitTestVisible="False" IsChecked="{Binding IsCheckProcess1}"/>
                    <telerik:HighlightTextBlock Style="{StaticResource HighlightTextBlockStyle}" Text="Move Wafer Center"/>
                    <telerik:HighlightTextBlock Style="{StaticResource HighlightTextBlockStyle}" Text="{Binding ProcessingTime1}"/>
                </WrapPanel>
            </Grid>
        </telerik:RadTabItem>

        <telerik:RadTabItem Style="{StaticResource RadTabItemStyle}" Width="100" Header="STEP 2">

        </telerik:RadTabItem>

        <telerik:RadTabItem Style="{StaticResource RadTabItemStyle}" Width="100" Header="STEP 3">

        </telerik:RadTabItem>

        <telerik:RadTabItem Style="{StaticResource RadTabItemStyle}" Width="100" Header="STEP 4">

        </telerik:RadTabItem>

        <telerik:RadTabItem Style="{StaticResource RadTabItemStyle}" Width="100" Header="BONDING">

        </telerik:RadTabItem>

    </telerik:RadTabControl>

       
</UserControl>
