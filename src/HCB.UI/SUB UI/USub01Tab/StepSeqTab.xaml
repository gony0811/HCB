<UserControl x:Class="HCB.UI.StepSeqTab"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
      xmlns:local="clr-namespace:HCB.UI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <telerik:GroupBox Header="Pre Step" FontSize="24" Margin="4" Style="{StaticResource GroupBoxStyle}" Grid.Row="0">
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
                <telerik:RadButton Style="{StaticResource RadButtonStyle}" Width="150" Height="50" Margin="4"
                                   Command="{Binding StepWaferAlignCommand}">
                    <telerik:HighlightTextBlock Text="Wafer Align"/>
                </telerik:RadButton>
                <telerik:RadButton Style="{StaticResource RadButtonStyle}" Width="150" Height="50" Margin="4"
                                   Command="{Binding StepDieAlignCommand}">
                    <telerik:HighlightTextBlock Text="Die Align"/>
                </telerik:RadButton>
                <telerik:RadButton Style="{StaticResource RadButtonStyle}" Width="150" Height="50" Margin="4"
                                   Command="{Binding StepDieAlignCommand}">
                    <telerik:HighlightTextBlock Text="Die Align"/>
                </telerik:RadButton>
            </StackPanel>
        </telerik:GroupBox>

    </Grid>
</UserControl>
