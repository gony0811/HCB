<UserControl x:Class="HCB.UI.ManualTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HCB.UI"
             mc:Ignorable="d" >

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!--
                예시 A: 리소스가 같은 어셈블리(프로젝트)에 있고 프로젝트 내 경로가
                "SYSTEM/COMMON/Styles/DefaultResource.xaml" 인 경우:
                -->
                <!-- 상대 패스 형태 (같은 어셈블리) -->
                <!-- <ResourceDictionary Source="/SYSTEM/COMMON/Styles/DefaultResource.xaml"/> -->

                <!--
                예시 B: 리소스가 다른 어셈블리(예: 어셈블리 이름이 'SYSTEM')에 있는 경우,
                pack URI 또는 assembly;component 형식을 사용해야 합니다:
                -->
                <!-- 다른 어셈블리에 있는 리소스 -->
                <!-- <ResourceDictionary Source="/SYSTEM;component/COMMON/Styles/DefaultResource.xaml"/> -->

                <!--
                예시 C: pack URI 명시적 사용 예시:
                -->
            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="local:MotorStatusTable">
                <Setter Property="FontSize" Value="10"></Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    <telerik:RadTabControl Style="{StaticResource RadTabControlStyle}">
        <telerik:RadTabItem Style="{StaticResource RadTabItemStyle}" Header="D-TABLE">
            <telerik:GroupBox Style="{StaticResource GroupBoxStyle}" Header="{Binding DyAxisTable.TableName}" Margin="5">
                <Grid local:GridHelper.Columns="1*, 1*" local:GridHelper.Rows="Auto, Auto">
                    <local:PositionTable Grid.Row="0" DataContext="{Binding DyAxisTable}" Margin="5"></local:PositionTable>
                    <local:MotorStatusTable Grid.Row="1" DataContext="{Binding DyMotorStatusTable}" Margin="5"/>
                </Grid>
            </telerik:GroupBox>
        </telerik:RadTabItem>
        <telerik:RadTabItem Style="{StaticResource RadTabItemStyle}" Header="P-TABLE">
            <telerik:GroupBox Header="{Binding PyAxisTable.TableName}"
          Style="{StaticResource GroupBoxStyle}"
          Margin="4"
          Grid.Row="1">
            <Grid local:GridHelper.Columns="1*, 1*" local:GridHelper.Rows="Auto, Auto">
                    <local:PositionTable Grid.Row="0" DataContext="{Binding PyAxisTable}" Margin="5"></local:PositionTable>

                    <local:MotorStatusTable Grid.Row="1" DataContext="{Binding PyMotorStatusTable}" Margin="5"/>
                
            </Grid>
            </telerik:GroupBox>
        </telerik:RadTabItem>
        <telerik:RadTabItem Style="{StaticResource RadTabItemStyle}" Header="B-HEAD">
            <Grid local:GridHelper.Rows="Auto, Auto" local:GridHelper.Columns="1*, 1*">

                <telerik:GroupBox Header="{Binding BxAxisTable.TableName}"
                                  Style="{StaticResource GroupBoxStyle}"
                                  Margin="5"
                                  Grid.Row="0" Grid.Column="0">
                    <StackPanel Orientation="Vertical" >
                        <local:PositionTable DataContext="{Binding BxAxisTable}" Margin="5"/>
                        <local:MotorStatusTable DataContext="{Binding BxMotorStatusTable}" Margin="5" />
                    </StackPanel>
                </telerik:GroupBox>

                <telerik:GroupBox Header="{Binding BtAxisTable.TableName}"
                                  Style="{StaticResource GroupBoxStyle}"
                                  Margin="5"
                                  Grid.Row="0" Grid.Column="1">
                    <StackPanel Orientation="Vertical">
                        <local:PositionTable DataContext="{Binding BtAxisTable}" Margin="5"/>
                        <local:MotorStatusTable DataContext="{Binding BtMotorStatusTable}" Margin="5"/>
                    </StackPanel>
                </telerik:GroupBox>

                <telerik:GroupBox Header="{Binding Bz1AxisTable.TableName}"
                                  Style="{StaticResource GroupBoxStyle}"
                                  Margin="5"
                                  Grid.Row="1" Grid.Column="0">
                    <StackPanel Orientation="Vertical" Grid.Row="1" Grid.Column="0">
                        <local:PositionTable DataContext="{Binding Bz1AxisTable}" Margin="5"/>
                        <local:MotorStatusTable DataContext="{Binding Bz1MotorStatusTable}" Margin="5"/>
                    </StackPanel>
                </telerik:GroupBox>

                <telerik:GroupBox Header="{Binding Bz2AxisTable.TableName}"
                                  Style="{StaticResource GroupBoxStyle}"
                                  Margin="5"
                                  Grid.Row="1" Grid.Column="1">
                    <StackPanel Orientation="Vertical">
                        <local:PositionTable DataContext="{Binding Bz2AxisTable}" Margin="5"/>
                        <local:MotorStatusTable DataContext="{Binding Bz2MotorStatusTable}" Margin="5"/>
                    </StackPanel>
                </telerik:GroupBox>
            </Grid>
        </telerik:RadTabItem>
        <telerik:RadTabItem Style="{StaticResource RadTabItemStyle}" Header="W-TABLE">
            <Grid local:GridHelper.Rows="Auto, Auto" local:GridHelper.Columns="1*, 1*">
                <telerik:GroupBox Header="{Binding WyAxisTable.TableName}"
                                  Style="{StaticResource GroupBoxStyle}"
                                  Margin="5"
                                  Grid.Row="0" Grid.Column="0">
                    <StackPanel Orientation="Vertical">
                        <local:PositionTable DataContext="{Binding WyAxisTable}" Margin="5"/>
                        <local:MotorStatusTable DataContext="{Binding WyMotorStatusTable}" Margin="5" />
                    </StackPanel>
                </telerik:GroupBox>

                <telerik:GroupBox Header="{Binding WtAxisTable.TableName}"
                                  Style="{StaticResource GroupBoxStyle}"
                                  Margin="5"
                                  Grid.Row="0" Grid.Column="1">
                    <StackPanel Orientation="Vertical">
                        <local:PositionTable DataContext="{Binding WtAxisTable}" Margin="5"/>
                        <local:MotorStatusTable DataContext="{Binding WtMotorStatusTable}" Margin="5" />
                    </StackPanel>
                </telerik:GroupBox>
            </Grid>
        </telerik:RadTabItem>
    </telerik:RadTabControl>
</UserControl>
