<UserControl x:Class="HCB.UI.ManualTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HCB.UI"
             mc:Ignorable="d" >
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!--
                예시 A: 리소스가 같은 어셈블리(프로젝트)에 있고 프로젝트 내 경로가
                "SYSTEM/COMMON/Styles/DefaultResource.xaml" 인 경우:
                -->
                <!-- 상대 패스 형태 (같은 어셈블리) -->
                <!-- <ResourceDictionary Source="/SYSTEM/COMMON/Styles/DefaultResource.xaml"/> -->

                <!--
                예시 B: 리소스가 다른 어셈블리(예: 어셈블리 이름이 'SYSTEM')에 있는 경우,
                pack URI 또는 assembly;component 형식을 사용해야 합니다:
                -->
                <!-- 다른 어셈블리에 있는 리소스 -->
                <!-- <ResourceDictionary Source="/SYSTEM;component/COMMON/Styles/DefaultResource.xaml"/> -->

                <!--
                예시 C: pack URI 명시적 사용 예시:
                -->
            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="local:MotorStatusTable">
                <Setter Property="FontSize" Value="10"></Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    <telerik:RadTabControl Style="{StaticResource RadTabControlStyle}">
        <telerik:RadTabItem Style="{StaticResource RadTabItemStyle}" Header="D-TABLE">
            <Grid local:GridHelper.Columns="1*, 1*" local:GridHelper.Rows="Auto, Auto, Auto">
                <local:PositionTable DataContext="{Binding DyAxisTable}"></local:PositionTable>

                <telerik:GroupBox Style="{StaticResource GroupBoxStyle}" Header="모터 상태 표시"
                          Margin="4"
                          Grid.Row="1">
                    <local:MotorStatusTable DataContext="{Binding DyMotorStatusTable}" Margin="5"/>
                </telerik:GroupBox>
            </Grid>
            
        </telerik:RadTabItem>
        <telerik:RadTabItem Style="{StaticResource RadTabItemStyle}" Header="P-TABLE">
            <Grid local:GridHelper.Columns="1*, 1*" local:GridHelper.Rows="Auto, Auto">
                <local:PositionTable DataContext="{Binding PyAxisTable}"></local:PositionTable>
                <telerik:GroupBox Header="모터 상태 표시"
                          Style="{StaticResource GroupBoxStyle}"
                          Margin="4"
                          Grid.Row="1">
                    <local:MotorStatusTable DataContext="{Binding PyMotorStatusTable}" />
                </telerik:GroupBox>
            </Grid>
        </telerik:RadTabItem>
        <telerik:RadTabItem Style="{StaticResource RadTabItemStyle}" Header="B-HEAD">
            <Grid local:GridHelper.Rows="Auto, Auto" local:GridHelper.Columns="1*, 1*, 1*">

                <local:PositionTable DataContext="{Binding BxAxisTable}" Grid.Column="0"></local:PositionTable>
                <local:PositionTable DataContext="{Binding Bz1AxisTable}" Grid.Column="1"></local:PositionTable>
                <local:PositionTable DataContext="{Binding Bz2AxisTable}" Grid.Column="2"></local:PositionTable>

                <telerik:GroupBox Header="모터 상태 표시"
                          Style="{StaticResource GroupBoxStyle}"
                          Margin="4"
                          Grid.Row="1" Grid.ColumnSpan="3">
                    <Grid local:GridHelper.Columns="1*, 1*, 1*">
                        <local:MotorStatusTable DataContext="{Binding BxMotorStatusTable}" Margin="4 0 4 0" />
                        <local:MotorStatusTable DataContext="{Binding Bz1MotorStatusTable}" Grid.Column="1" Margin="4 0 4 0"/>
                        <local:MotorStatusTable DataContext="{Binding Bz2MotorStatusTable}" Grid.Column="2" Margin="4 0 4 0"/>
                    </Grid>
                </telerik:GroupBox>
            </Grid>
        </telerik:RadTabItem>
        <telerik:RadTabItem Style="{StaticResource RadTabItemStyle}" Header="W-TABLE">
            <Grid local:GridHelper.Rows="Auto, Auto" local:GridHelper.Columns="1*, 1*">
                <local:PositionTable DataContext="{Binding WyAxisTable}" Grid.Column="0"></local:PositionTable>
                <local:PositionTable DataContext="{Binding WtAxisTable}" Grid.Column="1"></local:PositionTable>
                <local:MotorStatusTable DataContext="{Binding WyMotorStatusTable}" Grid.Row="1" Margin="4 0 4 0" />
                <local:MotorStatusTable DataContext="{Binding WtMotorStatusTable}" Grid.Column="1" Grid.Row="1" Margin="4 0 4 0"/>
            </Grid>
        </telerik:RadTabItem>
    </telerik:RadTabControl>
</UserControl>
