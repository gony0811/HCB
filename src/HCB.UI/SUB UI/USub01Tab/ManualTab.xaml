<UserControl x:Class="HCB.UI.ManualTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HCB.UI"
             mc:Ignorable="d" >
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/SYSTEM/COMMON/Styles/DefaultResource.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="local:MotorStatusTable">
                <Setter Property="FontSize" Value="10"></Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    <telerik:RadTabControl Style="{StaticResource RadTabControlStyle}">
        <telerik:RadTabItem Style="{StaticResource RadTabItemStyle}" Header="D-TABLE">
            <Grid local:GridHelper.Columns="1*, 1*" local:GridHelper.Rows="Auto, Auto, Auto">
                <local:DieAxisTable DataContext="{Binding DyAxisTable}"></local:DieAxisTable>

                <telerik:GroupBox Style="{StaticResource GroupBoxStyle}" Header="모터 상태 표시"
                          Margin="4"
                          Grid.Row="1">
                    <local:MotorStatusTable DataContext="{Binding DyMotorStatusTable}" />
                </telerik:GroupBox>
            </Grid>
            
        </telerik:RadTabItem>
        <telerik:RadTabItem Style="{StaticResource RadTabItemStyle}" Header="P-TABLE">
            <Grid local:GridHelper.Columns="1*, 1*" local:GridHelper.Rows="Auto, Auto">
                <local:DieAxisTable DataContext="{Binding PyAxisTable}"></local:DieAxisTable>
                <telerik:GroupBox Header="모터 상태 표시"
                          Style="{StaticResource GroupBoxStyle}"
                          Margin="4"
                          Grid.Row="1">
                    <local:MotorStatusTable DataContext="{Binding PyMotorStatusTable}" />
                </telerik:GroupBox>
            </Grid>
        </telerik:RadTabItem>
        <telerik:RadTabItem Style="{StaticResource RadTabItemStyle}" Header="B-TABLE">
            <Grid local:GridHelper.Rows="Auto, Auto" local:GridHelper.Columns="1*, 1*, 1*">
                
                <local:DieAxisTable DataContext="{Binding BxAxisTable}" Grid.Column="0"></local:DieAxisTable>
                <local:DieAxisTable DataContext="{Binding Bz1AxisTable}" Grid.Column="1"></local:DieAxisTable>
                <local:DieAxisTable DataContext="{Binding Bz2AxisTable}" Grid.Column="2"></local:DieAxisTable>

                <telerik:GroupBox Header="모터 상태 표시"
                          Style="{StaticResource GroupBoxStyle}"
                          Margin="4"
                          Grid.Row="1" Grid.ColumnSpan="3">
                    <Grid local:GridHelper.Columns="1*, 1*, 1*">
                        <local:MotorStatusTable DataContext="{Binding BxMotorStatusTable}" Margin="4 0 4 0" />
                        <local:MotorStatusTable DataContext="{Binding Bz1MotorStatusTable}" Grid.Column="1" Margin="4 0 4 0"/>
                        <local:MotorStatusTable DataContext="{Binding Bz2MotorStatusTable}" Grid.Column="2" Margin="4 0 4 0"/>
                    </Grid>
                </telerik:GroupBox>
            </Grid>
        </telerik:RadTabItem>
        <telerik:RadTabItem Style="{StaticResource RadTabItemStyle}" Header="W-TABLE">
            <Grid local:GridHelper.Rows="Auto, Auto" local:GridHelper.Columns="1*, 1*">
                <local:DieAxisTable DataContext="{Binding WyAxisTable}" Grid.Column="0"></local:DieAxisTable>
                <local:DieAxisTable DataContext="{Binding WtAxisTable}" Grid.Column="1"></local:DieAxisTable>
                <local:MotorStatusTable DataContext="{Binding WyMotorStatusTable}" Grid.Row="1" Margin="4 0 4 0" />
                <local:MotorStatusTable DataContext="{Binding WtMotorStatusTable}" Grid.Column="1" Grid.Row="1" Margin="4 0 4 0"/>
            </Grid>
        </telerik:RadTabItem>
    </telerik:RadTabControl>
</UserControl>
