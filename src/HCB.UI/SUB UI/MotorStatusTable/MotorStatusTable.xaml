<UserControl x:Class="HCB.UI.MotorStatusTable"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HCB.UI"
             x:Name="root"
             mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/SYSTEM/COMMON/Styles/DefaultResource.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid local:GridHelper.Columns="1*, 1*, 1*, 1*, 1*, 1*, 1*" local:GridHelper.Rows="1*, 1*">
        <Border Style="{StaticResource Cell}" Grid.RowSpan="2">
            <telerik:HighlightTextBlock Style="{StaticResource HighlightTextBlockStyle}" Text="{Binding TableName}"
                       FontSize="{Binding FontSize, ElementName=root}"
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>

        <Border Style="{StaticResource Cell}" Grid.Column="1" Grid.Row="0">
            <local:StateCell Label="HOME" IsOn="False"/>
        </Border>

        <Border Style="{StaticResource Cell}" Grid.Column="2" Grid.Row="0">
            <local:StateCell Label="RDY" 
                             IsOn="False"/>
        </Border>

        <Border Style="{StaticResource Cell}" Grid.Column="3" Grid.Row="0">
            <local:StateCell Label="ALM" IsOn="False"/>
        </Border>

        <Border Style="{StaticResource Cell}" Grid.Column="4" Grid.Row="0">
            <local:StateCell Label="INPO" IsOn="False"/>
        </Border>

        <Border Style="{StaticResource Cell}" Grid.Column="5" Grid.Row="0">
            <StackPanel Orientation="Horizontal">
                <telerik:HighlightTextBlock Style="{StaticResource HighlightTextBlockStyle}" Text="ENC: "
                           FontSize="{Binding FontSize, ElementName=root}"/>
                <telerik:HighlightTextBlock Style="{StaticResource HighlightTextBlockStyle}" MinWidth="100" Text="{Binding Enc}"
                           FontSize="{Binding FontSize, ElementName=root}"/>
            </StackPanel>
        </Border>

        <Border Style="{StaticResource Cell}" Grid.Column="6" Grid.Row="0">
            <telerik:RadButton Style="{StaticResource RadButtonStyle}" Content="SERVO ON"
                    FontSize="{Binding FontSize, ElementName=root}"/>
        </Border>

        <Border Style="{StaticResource Cell}" Grid.Column="1" Grid.Row="1">
            <local:StateCell Label="N-LMT" IsOn="False"/>
        </Border>

        <Border Style="{StaticResource Cell}" Grid.Column="2" Grid.Row="1">
            <local:StateCell Label="ORG" IsOn="False"/>
        </Border>

        <Border Style="{StaticResource Cell}" Grid.Column="3" Grid.Row="1">
            <local:StateCell Label="P-LMT" IsOn="False"/>
        </Border>

        <Border Style="{StaticResource Cell}" Grid.Column="4" Grid.Row="1"/>
        <Border Style="{StaticResource Cell}" Grid.Column="5" Grid.Row="1">
            <StackPanel Orientation="Horizontal">
                <telerik:HighlightTextBlock Style="{StaticResource HighlightTextBlockStyle}" Text="POS: "
                           FontSize="{Binding FontSize, ElementName=root}"/>
                <telerik:HighlightTextBlock Style="{StaticResource HighlightTextBlockStyle}" MinWidth="100" Text="{Binding Pos}"
                           FontSize="{Binding FontSize, ElementName=root}"/>
            </StackPanel>
        </Border>

        <Border Style="{StaticResource Cell}" Grid.Column="6" Grid.Row="1">
            <telerik:RadButton Style="{StaticResource RadButtonStyle}" Content="HOME 실행"
                    FontSize="{Binding FontSize, ElementName=root}"/>
        </Border>

    </Grid>
</UserControl>
