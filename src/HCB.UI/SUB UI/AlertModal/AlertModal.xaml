<Window x:Class="HCB.UI.AlertModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        xmlns:local="clr-namespace:HCB.UI"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        MinWidth="380" MinHeight="180"
        WindowStyle="None"
        Title="AlertModal">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/SYSTEM/Common/Styles/UMainStyle.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Border Padding="16" Background="Black">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 커스텀 타이틀(창 타이틀과 동일 텍스트) -->
            <telerik:HighlightTextBlock Grid.Row="0"
                       Text="{Binding TitleText, RelativeSource={RelativeSource AncestorType=Window}}"
                        
                       TextAlignment="Center"
                       Foreground="White"
                       FontSize="18"
                       FontWeight="SemiBold"
                       Margin="0,0,0,8"/>

            <!-- 본문 -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <telerik:HighlightTextBlock Text="{Binding MessageText, RelativeSource={RelativeSource AncestorType=Window}}"
                                             
                                            TextAlignment="Center"
                                            TextWrapping="Wrap"
                                            Foreground="White"
                                            LineHeight="22"/>
            </ScrollViewer>
        </Grid>
    </Border>

</Window>
