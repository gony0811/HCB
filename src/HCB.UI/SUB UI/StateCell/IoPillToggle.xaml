<UserControl x:Class="HCB.UI.IoPillToggle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             xmlns:local="clr-namespace:HCB.UI"
             mc:Ignorable="d"
             x:Name="root"
             Width="150" Height="60" >
    <UserControl.Resources>
        <local:InverseBoolConverter x:Key="InvBool"/>
    </UserControl.Resources>

    <!-- 버튼 전체가 토글 역할 -->
    <telerik:RadToggleButton x:Name="PART_Toggle"
                  IsChecked="{Binding IsChecked, ElementName=root, Mode=TwoWay}"
                  IsEnabled="{Binding IsReadOnly, ElementName=root, Converter={StaticResource InvBool}}"
                  Command="{Binding Command, ElementName=root}"  
                  CommandParameter="{Binding CommandParameter, ElementName=root}"
                  Background="Transparent" BorderThickness="0" Cursor="Hand" Focusable="True"
                  Style="{StaticResource RadToggleButtonStyle}">
        <telerik:RadToggleButton.Template>
            <ControlTemplate TargetType="telerik:RadToggleButton">
                <Grid SnapsToDevicePixels="True" Margin="0">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">

                        <!-- 좌측 원형 인디케이터 -->
                        <Border x:Name="indicator"
                              Width="{Binding IndicatorSize, ElementName=root}"
                              Height="{Binding IndicatorSize, ElementName=root}"
                              CornerRadius="999"
                              Background="Transparent"
                              BorderBrush="{Binding IndicatorOffStroke, ElementName=root}"
                              BorderThickness="2"
                              />

                        <!-- 우측 ON/OFF pill -->
                        <Border x:Name="pill"
                              MinWidth="100" Height="50"
                              CornerRadius="5"
                              >
                            <telerik:HighlightTextBlock x:Name="lbl"
                                   Text="{Binding OffText, ElementName=root}"
                                   Foreground="{Binding LabelInactiveBrush, ElementName=root}"
                                   FontWeight="SemiBold"
                                   FontSize="{Binding LabelFontSize, ElementName=root}"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"
                                                    />
                        </Border>
                    </StackPanel>
                </Grid>

                <!-- 상태 트리거 -->
                <ControlTemplate.Triggers>
                    <!-- ON -->
                    <Trigger Property="IsChecked" Value="True">
                        <Setter TargetName="indicator" Property="BorderThickness" Value="0"/>

                        <Setter TargetName="lbl"  Property="Text"        Value="{Binding OnText, ElementName=root}"/>
                        <Setter TargetName="lbl"  Property="Foreground"  Value="#FF28A745"/>
                    </Trigger>

                    <Trigger Property="IsChecked" Value="False">
                        <Setter TargetName="indicator" Property="BorderBrush" Value="#FFDC3545"/>
                        <Setter TargetName="indicator" Property="BorderThickness" Value="2"/>

                        <Setter TargetName="lbl"  Property="Text"        Value="{Binding OffText, ElementName=root}"/>
                        <Setter TargetName="lbl"  Property="Foreground"  Value="#FFDC3545"/>
                    </Trigger>

                </ControlTemplate.Triggers>
            </ControlTemplate>
        </telerik:RadToggleButton.Template>
    </telerik:RadToggleButton>
</UserControl>
