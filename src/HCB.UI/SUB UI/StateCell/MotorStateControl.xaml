<UserControl x:Class="HCB.UI.MotorStateControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:model="clr-namespace:HCB.UI"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             xmlns:local="clr-namespace:HCB.UI"
             xmlns:uc="clr-namespace:HCB.UI"
             mc:Ignorable="d">

    <Border Padding="10"
            Background="#1E1E1E"
            BorderBrush="#3A3A3A"
            BorderThickness="1"
            CornerRadius="6">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- ===== Header ===== -->
            <Grid 
                        VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Border BorderBrush="Gray" BorderThickness="1">
                    <TextBlock Text="{Binding Name}"
                   FontSize="18"
                   FontWeight="Bold"
                   Foreground="White"
                   Margin="0,0,10,0"/>
                </Border>
                

                <Button Content="Servo ON"
                        Grid.Column="1"
                        Command="{Binding ServoOnCommand}"
                        Margin="4,0"/>

                <Button Content="Home"
                        Grid.Column="2"
                        Command="{Binding HomeCommand}"
                        Margin="4,0"/>
            </Grid>

            <!-- ===== Status Indicators ===== -->
            <UniformGrid Grid.Row="1" Columns="4" Margin="0,10,0,10">

                <local:StateCell Label="Enable"     IsOn="{Binding IsEnabled}"/>
                <local:StateCell Label="Busy"       IsOn="{Binding IsBusy}"/>
                <local:StateCell Label="Error"      IsOn="{Binding IsError}"/>
                <local:StateCell Label="InPos"      IsOn="{Binding InPosition}"/>

                <local:StateCell Label="Home"       IsOn="{Binding IsHome}"/>
                <local:StateCell Label="+Limit"     IsOn="{Binding IsPlusLimit}"/>
                <local:StateCell Label="-Limit"     IsOn="{Binding IsMinusLimit}"/>
                <local:StateCell Label="HomeDone"   IsOn="{Binding IsHomeDone}"/>

            </UniformGrid>

            <!-- ===== Numeric Values ===== -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Border BorderBrush="Gray" BorderThickness="1" Margin="2">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="Current Pos"
                               Foreground="Gray"/>
                        <TextBlock Text="{Binding CurrentPosition, StringFormat=F3}"
                               FontSize="16"
                               TextAlignment="Center"
                               Foreground="White"/>
                    </StackPanel>
                </Border>
                <Border BorderBrush="Gray" BorderThickness="1" Grid.Column="1" Margin="2">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="Command Pos"
                               Foreground="Gray"/>
                        <TextBlock Text="{Binding CommandPosition, StringFormat=F3}"
                               FontSize="16"
                                   TextAlignment="Center"
                               Foreground="White"/>
                    </StackPanel>
                </Border>

                <Border BorderBrush="Gray" BorderThickness="1" Grid.Column="2" Margin="2">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="Speed"
                                    Foreground="Gray"/>
                        <TextBlock Text="{Binding CurrentSpeed, StringFormat=F2}"
                                    FontSize="16"
                                   TextAlignment="Center"
                                    Foreground="White"/>
                    </StackPanel>
                </Border>
                
            </Grid>

        </Grid>
    </Border>

</UserControl>
