<UserControl x:Class="HCB.UI.MotionMoveController"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             xmlns:local="clr-namespace:HCB.UI"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <telerik:RadTabControl TabStripPlacement="Top" SelectedIndex="0">
            <telerik:RadTabItem Header="피치 이동">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Button Content="-0.01 um" Margin="2" Command="{Binding PitchMoveCommand}"></Button>
                    <Button Content="-0.1 um" Grid.Row="1" Margin="2" Command="{Binding PitchMoveCommand}"></Button>
                    <Button Content="-1 um" Grid.Row="2" Margin="2" Command="{Binding PitchMoveCommand}"></Button>
                    <Button Content="0.01 um" Grid.Column="2" Margin="2" Command="{Binding PitchMoveCommand}"></Button>
                    <Button Content="0.1 um" Grid.Column="2" Grid.Row="1" Margin="2" Command="{Binding PitchMoveCommand}"></Button>
                    <Button Content="1 um" Grid.Column="2" Grid.Row="2" Margin="2" Command="{Binding PitchMoveCommand}"></Button>
                    <Button Content="피치 이동" Grid.ColumnSpan="3" Grid.Row="3" Command="{Binding PitchMoveCommand}"/>
                </Grid>
                
            </telerik:RadTabItem>
            <telerik:RadTabItem Header="조그 이동">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Button Content="+" Margin="2" Width="120" Height="120" FontSize="50">
                        <i:Interaction.Triggers>

                            <!-- 누르는 순간 -->
                            <i:EventTrigger EventName="PreviewMouseLeftButtonDown">
                                <i:InvokeCommandAction
                                    Command="{Binding JogPlusCommand}" />
                            </i:EventTrigger>

                            <!-- 떼는 순간 -->
                            <i:EventTrigger EventName="PreviewMouseLeftButtonUp">
                                <i:InvokeCommandAction
                                    Command="{Binding JogStopCommand}" />
                            </i:EventTrigger>

                            <!-- 버튼 밖으로 벗어났을 때 (중요) -->
                            <i:EventTrigger EventName="LostMouseCapture">
                                <i:InvokeCommandAction
                                    Command="{Binding JogStopCommand}" />
                            </i:EventTrigger>

                        </i:Interaction.Triggers>
                    </Button>
                    <Button Content="-" Grid.Row="1" Margin="1" Width="120" Height="120" FontSize="50">
                        <i:Interaction.Triggers>
                            <!-- 누르는 순간 -->
                            <i:EventTrigger EventName="PreviewMouseLeftButtonDown">
                                <i:InvokeCommandAction
                                    Command="{Binding JogMinusCommand}" />
                            </i:EventTrigger>

                            <!-- 떼는 순간 -->
                            <i:EventTrigger EventName="PreviewMouseLeftButtonUp">
                                <i:InvokeCommandAction
                                    Command="{Binding JogStopCommand}" />
                            </i:EventTrigger>

                            <!-- 버튼 밖으로 벗어났을 때 (중요) -->
                            <i:EventTrigger EventName="LostMouseCapture">
                                <i:InvokeCommandAction
                                    Command="{Binding JogStopCommand}" />
                            </i:EventTrigger>

                        </i:Interaction.Triggers>
                    </Button>
                </Grid>
            </telerik:RadTabItem>
        </telerik:RadTabControl>
        <Grid Grid.Column="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Text="속도"/>
            <telerik:RadSlider 
                Grid.Row="1"
                Orientation="Vertical"
                Margin="4"
                Minimum="1"
                Maximum="100"
                StepAction="ChangeRange"
                Value="{Binding Speed}"
                TickPlacement="None"
                IsSnapToTickEnabled="False"
                SelectionStart="1"
                SelectionEnd="{Binding Speed}"/>
            <TextBlock Grid.Row="2"
                       HorizontalAlignment="Center"
                       Text="{Binding Speed}"/>
        </Grid>
        
    </Grid>
    
</UserControl>
