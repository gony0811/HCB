<telerik:RadWindow x:Class="HCB.UI.CreateModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        xmlns:pt="clr-namespace:PropertyTools.Wpf;assembly=PropertyTools.Wpf">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- 공통 정보 -->
            <RowDefinition Height="Auto"/>
            <!-- 구분선 -->
            <RowDefinition Height="*"/>
            <!-- 타입별 상세 정보 -->
            <RowDefinition Height="Auto"/>
            <!-- 버튼 -->
        </Grid.RowDefinitions>

        <!-- 공통 Device 정보 -->
        <telerik:GroupBox Header="Device 기본정보" Grid.Row="0" Margin="0 0 0 10" Style="{StaticResource GroupBoxStyle}">
            <pt:PropertyGrid x:Name="MainGrid" SelectedObject="{Binding}" Style="{StaticResource DialogBaseStyle}">
                <pt:PropertyGrid.TabPageHeaderTemplate>
                    <DataTemplate>
                        <telerik:HighlightTextBlock Text="기본" Style="{StaticResource HighlightTextBlockStyle}"/>
                    </DataTemplate>
                </pt:PropertyGrid.TabPageHeaderTemplate>
                <pt:PropertyGrid.TabHeaderTemplate>
                    <DataTemplate>
                        <telerik:HighlightTextBlock Text="디바이스" Style="{StaticResource HighlightTextBlockStyle}"/>
                    </DataTemplate>
                </pt:PropertyGrid.TabHeaderTemplate>
            </pt:PropertyGrid>
        </telerik:GroupBox>

        <!-- 구분선 -->
        <telerik:BorderContainer Grid.Row="1" Height="1" Background="#DDD" Margin="0 5" Style="{StaticResource BorderContainerStyle}"/>

        <!-- 타입별 상세 설정 -->
        <telerik:GroupBox Header="타입별 상세설정" Grid.Row="2" Style="{StaticResource GroupBoxStyle}">
            <pt:PropertyGrid x:Name="DetailGrid" SelectedObject="{Binding ExtraSetting}" Style="{StaticResource TextElementPropertiesExplicitStyle}">
                <pt:PropertyGrid.TabHeaderTemplate>
                    <DataTemplate>
                        <telerik:HighlightTextBlock Text="상세정보" Style="{StaticResource HighlightTextBlockStyle}"/>
                    </DataTemplate>
                </pt:PropertyGrid.TabHeaderTemplate>
            </pt:PropertyGrid>
        </telerik:GroupBox>

        <!-- 버튼 -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 10 0 0">
            <telerik:RadButton Content="저장" Width="80" Height="35" Margin="4" Click="Save_Click" Style="{StaticResource RadButtonStyle}"/>
            <telerik:RadButton Content="취소" Width="80" Height="35" Margin="4" Click="Cancel_Click" Style="{StaticResource RadButtonCloseStyle}"/>
        </StackPanel>
    </Grid>
</telerik:RadWindow>
