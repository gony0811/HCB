<UserControl x:Class="HCB.UI.MotorStatusTable"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HCB.UI"
             x:Name="root"
             mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/SYSTEM/COMMON/Styles/DefaultResource.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid local:GridHelper.Columns="1*, 1*, 1*, 1*, 1*, 1*, 1*" local:GridHelper.Rows="1*, 1*">
        <Border Style="{StaticResource Cell}" Grid.RowSpan="2">
            <TextBlock Text="{Binding TableName}"
                       FontSize="{Binding FontSize, ElementName=root}"
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>

        <Border Style="{StaticResource Cell}" Grid.Column="1" Grid.Row="0">
            <local:StateCell Label="HOME" 
                             State="{Binding HomeState}"
                             DotSize="{Binding FontSize}"
                             FontSize="{Binding FontSize, ElementName=root}"/>
        </Border>

        <Border Style="{StaticResource Cell}" Grid.Column="2" Grid.Row="0">
            <local:StateCell Label="RDY" 
                             State="{Binding RdyState}"
                             DotSize="{Binding FontSize}"
                             FontSize="{Binding FontSize, ElementName=root}"/>
        </Border>

        <Border Style="{StaticResource Cell}" Grid.Column="3" Grid.Row="0">
            <local:StateCell Label="ALM" 
                             State="{Binding AlmState}"
                             DotSize="{Binding FontSize}"
                             FontSize="{Binding FontSize, ElementName=root}"/>
        </Border>

        <Border Style="{StaticResource Cell}" Grid.Column="4" Grid.Row="0">
            <local:StateCell Label="INPO" 
                             State="{Binding InpoState}"
                             DotSize="{Binding FontSize}"
                             FontSize="{Binding FontSize, ElementName=root}"/>
        </Border>

        <Border Style="{StaticResource Cell}" Grid.Column="5" Grid.Row="0">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="ENC: "
                           FontSize="{Binding FontSize, ElementName=root}"/>
                <TextBlock Text="{Binding Enc}"
                           FontSize="{Binding FontSize, ElementName=root}"/>
            </StackPanel>
        </Border>

        <Border Style="{StaticResource Cell}" Grid.Column="6" Grid.Row="0">
            <Button Content="SERVO ON"
                    FontSize="{Binding FontSize, ElementName=root}"/>
        </Border>

        <Border Style="{StaticResource Cell}" Grid.Column="1" Grid.Row="1">
            <local:StateCell Label="N-LMT" 
                             State="{Binding NlmtState}"
                             FontSize="{Binding FontSize, ElementName=root}"/>
        </Border>

        <Border Style="{StaticResource Cell}" Grid.Column="2" Grid.Row="1">
            <local:StateCell Label="ORG" 
                             State="{Binding OrgState}"
                             FontSize="{Binding FontSize, ElementName=root}"/>
        </Border>

        <Border Style="{StaticResource Cell}" Grid.Column="3" Grid.Row="1">
            <local:StateCell Label="P-LMT" 
                             State="{Binding PlmtState}"
                             FontSize="{Binding FontSize, ElementName=root}"/>
        </Border>

        <Border Style="{StaticResource Cell}" Grid.Column="4" Grid.Row="1"/>
        <Border Style="{StaticResource Cell}" Grid.Column="5" Grid.Row="1">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Pos: "
                           FontSize="{Binding FontSize, ElementName=root}"/>
                <TextBlock Text="{Binding Pos}"
                           FontSize="{Binding FontSize, ElementName=root}"/>
            </StackPanel>
        </Border>

        <Border Style="{StaticResource Cell}" Grid.Column="6" Grid.Row="1">
            <Button Content="HOME 실행"
                    FontSize="{Binding FontSize, ElementName=root}"/>
        </Border>

    </Grid>
</UserControl>
