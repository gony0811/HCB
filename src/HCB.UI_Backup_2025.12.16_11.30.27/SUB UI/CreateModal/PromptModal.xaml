<telerik:RadWindow x:Class="HCB.UI.PromptModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HCB.UI"
        mc:Ignorable="d"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        Style="{StaticResource RadWindowStyle}">
    
    <telerik:RadWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/SYSTEM/COMMON/Styles/UMainStyle.xaml"></ResourceDictionary>
                <ResourceDictionary>
                    <Thickness x:Key="SubPageMargin">10</Thickness>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </telerik:RadWindow.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <!-- 타입별 상세 정보 -->
            <RowDefinition Height="Auto"/>
            <!-- 버튼 -->
        </Grid.RowDefinitions>

        <!-- 공통 Device 정보 -->
        <telerik:GroupBox Header="Device 기본정보" Grid.Row="0" Margin="0 0 0 10" Style="{StaticResource GroupBoxStyle}">
            <telerik:RadPropertyGrid x:Name="MainGrid" Item="{Binding}" AutoGeneratePropertyDefinitions="True" LabelColumnWidth="100" Style="{StaticResource RadPropertyGridStyle}">
            </telerik:RadPropertyGrid>
        </telerik:GroupBox>

        <!-- 구분선 -->
        <telerik:BorderContainer Grid.Row="1" Height="1" Background="#DDD" Margin="0 5" Style="{StaticResource BorderContainerStyle}"/>

        <!-- 버튼 -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 10 0 0">
            <telerik:RadButton Content="저장" Width="80" Height="35" Margin="4" Click="Save_Click" Style="{StaticResource RadButtonStyle}"/>
            <telerik:RadButton Content="취소" Width="80" Height="35" Margin="4" Click="Cancel_Click" Style="{StaticResource RadButtonStyle}"/>
        </StackPanel>
    </Grid>
</telerik:RadWindow>
