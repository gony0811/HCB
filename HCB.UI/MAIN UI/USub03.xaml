<Page x:Class="HCB.UI.USub03"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:diag="clr-namespace:System.Diagnostics;assembly=WindowsBase"
      xmlns:local="clr-namespace:HCB.UI"
      mc:Ignorable="d">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/SYSTEM/Common/Styles/DefaultResource.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <local:BoolToTextConverter x:Key="BoolToText"/>
            <local:BoolToBrushConverter x:Key="BoolToBrush"/>
            <local:NotConverter x:Key="Not"/>
            <DataTemplate x:Key="SwitchContentTemplate">
                <Border Margin="8,0" CornerRadius="8" Padding="8,2" Cursor="Hand"
                     Background="{Binding Granted, Converter={StaticResource BoolToBrush},
                                   ConverterParameter='#4CAF50|#BDBDBD'}">
                    <telerik:HighlightTextBlock Style="{StaticResource HighlightTextBlockStyle}" Text="{Binding Granted, Converter={StaticResource BoolToText},
                                    ConverterParameter='ON/OFF'}"
                             FontWeight="SemiBold"/>
                </Border>
            </DataTemplate>
        </ResourceDictionary>

    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <telerik:RadHighlightTextBlock Text="사용자 설정" 
                                 FontSize="24" 
                                 FontWeight="SemiBold" 
                                 Grid.Column="0" 
                                 Grid.Row="0" 
                                 Margin="10"
                                 Style="{StaticResource RadHighlightTextBlockStyle}"/>

        <telerik:GroupBox Header="사용자 선택"
                            Style="{StaticResource GroupBoxStyle}"
                            Grid.Column="0" Grid.Row="1" 
                            Margin="10" Width="250">
            <StackPanel>
                <Button Content="작업자" 
                        Command="{Binding LoginCommand}" 
                        CommandParameter="OPERATOR" 
                        Margin="4" Height="40"/>

                <Button Content="엔지니어" 
                        Command="{Binding LoginCommand}" 
                        CommandParameter="ENGINEER" 
                        Margin="4" Height="40"/>

                <Button Content="관리자" 
                        Command="{Binding LoginCommand}" 
                        CommandParameter="ADMIN" 
                        Margin="4" Height="40"/>

                <Button Content="서비스 엔지니어" 
                        Command="{Binding LoginCommand}" 
                        CommandParameter="SERVICE_ENGINEER" 
                        Margin="4" Height="40"/>
            </StackPanel>

        </telerik:GroupBox>


        <Border Grid.Column="1" Grid.Row="1">
            <StackPanel Orientation="Horizontal">
                <telerik:GroupBox Header="접근 권한 ( 작업자 )"
                                  Visibility="{Binding OperatorGrant}"
                                  Style="{StaticResource GroupBoxStyle}"
                                  Grid.Column="0" Grid.Row="1" Grid.RowSpan="2"
                                  Margin="10" Width="330">
                    <StackPanel>
                        <telerik:RadGridView
                                Style="{StaticResource RadGridViewStyle}"
                                ItemsSource="{Binding OperatorScreens}"
                                FontSize="16"
                                ShowGroupPanel="False"
                                AutoGenerateColumns="False"
                                CanUserDeleteRows="False"
                                SelectionMode="Single"
                                GridLinesVisibility="None">

                            <telerik:RadGridView.Columns>
                                <telerik:GridViewDataColumn Header="이름" DataMemberBinding="{Binding ScreenName}" Width="1*" IsReadOnly="True"/>
                                <telerik:GridViewDataColumn Header="접근" DataMemberBinding="{Binding Granted}" Width="1*"/>
                            </telerik:RadGridView.Columns>
                        </telerik:RadGridView>

                        <Button Content="저장" Command="{Binding SaveOpScreenCommand}" HorizontalAlignment="Right" Width="100" Margin="4"> </Button>
                    </StackPanel>
                    
                    

                </telerik:GroupBox>
                <telerik:GroupBox Header="접근 권한 ( 엔지니어 )"
                                  Style="{StaticResource GroupBoxStyle}"
                                  Visibility="{Binding EngineerGrant}"
                                  Grid.Column="0" Grid.Row="1" Grid.RowSpan="2"
                                  Margin="10" Width="330">
                    <StackPanel>
                        <telerik:RadGridView
                                Style="{StaticResource RadGridViewStyle}"
                                ItemsSource="{Binding EngineerScreens}"
                                FontSize="16"
                                ShowGroupPanel="False"
                                AutoGenerateColumns="False"
                                CanUserDeleteRows="False"
                                SelectionMode="Single"
                                GridLinesVisibility="None">

                            <telerik:RadGridView.Columns>
                                <telerik:GridViewDataColumn Header="이름" DataMemberBinding="{Binding ScreenName}" Width="1*" IsReadOnly="True"/>
                                <telerik:GridViewDataColumn Header="접근" DataMemberBinding="{Binding Granted}" Width="1*"/>
                            </telerik:RadGridView.Columns>
                        </telerik:RadGridView>
                        <Button Content="저장" Command="{Binding SaveENGScreenCommand}" HorizontalAlignment="Right" Width="100" Margin="4"></Button>
                    </StackPanel>
                </telerik:GroupBox>

            </StackPanel>
        </Border>
    </Grid>
</Page>
