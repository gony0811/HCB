                                                                  Margin="2">
                                                    </telerik:RadButton>
                                                </StackPanel>
                                                
                                            </DataTemplate>
                                        </telerik:GridViewDataColumn.CellTemplate>
                                    </telerik:GridViewDataColumn>
                                </telerik:RadGridView.Columns>
                            </telerik:RadGridView>

                            <local:MotorStateControl DataContext="{Binding WyAxis}" Margin="5"/>
                        </StackPanel>
                    </telerik:GroupBox>
                </Grid>
                <Grid local:GridHelper.Rows="*, Auto" Grid.Column="1">
                    <telerik:GroupBox Style="{StaticResource GroupBoxStyle}" Header="W-T"
                                Margin="4"
                                Grid.Row="0" Grid.RowSpan="2">
                        <StackPanel Orientation="Vertical" Margin="5">
                            <telerik:RadGridView
                                Style="{StaticResource RadGridViewStyle}"
                                ItemsSource="{Binding WtAxis.PositionList}"
                                FontSize="16"
                                ShowGroupPanel="False"
                                AutoGenerateColumns="False"
                                IsReadOnly="True"
                                CanUserDeleteRows="False"
                                SelectionMode="Single"
                                GridLinesVisibility="None"
                                MinHeight="250"
                                Margin="5">

                                <telerik:RadGridView.Columns>
                                    <telerik:GridViewDataColumn Header="이름"
                                                  DataMemberBinding="{Binding Name}"
                                                  Width="*"
                                                  SortMemberPath="Name"/>
                                    <telerik:GridViewDataColumn Header="위치"
                                                  DataMemberBinding="{Binding Position, StringFormat=F3}"
                                                  Width="100"
                                                  SortMemberPath="Location"/>
                                    <telerik:GridViewDataColumn Header="속도"
                                                  DataMemberBinding="{Binding Speed, StringFormat=F2}"
                                                  Width="100"
                                                  SortMemberPath="Speed"/>

                                    <telerik:GridViewDataColumn Header="동작" Width="200">
                                        <telerik:GridViewDataColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">

                                                    <telerik:RadButton Style="{StaticResource RadButtonStyle}" 
                                                                   Content="이동" 
                                                                   Command="{Binding DataContext.MovePositionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                                   Margin="2">
                                                        <telerik:RadButton.CommandParameter>
                                                            <MultiBinding Converter="{StaticResource TupleConverter}">
                                                                <Binding Path="DataContext.WtAxis" RelativeSource="{RelativeSource AncestorType=UserControl}"/>
                                                                <Binding/>
