                                                                DataMemberBinding="{Binding Name}"
                                                                Width="*"
                                                                SortMemberPath="Name"/>
                                                                                    <telerik:GridViewDataColumn Header="위치"
                                                                DataMemberBinding="{Binding Position, StringFormat=F3}"
                                                                Width="100"
                                                                SortMemberPath="Location"/>
                                                                                    <telerik:GridViewDataColumn Header="속도"
                                                                DataMemberBinding="{Binding Speed, StringFormat=F2}"
                                                                Width="100"
                                                                SortMemberPath="Speed"/>
                                    <telerik:GridViewDataColumn Header="동작" Width="200">
                                        <telerik:GridViewDataColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <telerik:RadButton Style="{StaticResource RadButtonStyle}" 
                                                                   Content="이동" 
                                                                   Width="80"
                                                                   Command="{Binding DataContext.MovePositionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                                   Margin="2">
                                                        <telerik:RadButton.CommandParameter>
                                                            <MultiBinding Converter="{StaticResource TupleConverter}">
                                                                <Binding Path="DataContext.BxAxis" RelativeSource="{RelativeSource AncestorType=UserControl}"/>
                                                                <Binding/>
                                                            </MultiBinding>
                                                        </telerik:RadButton.CommandParameter>
                                                    </telerik:RadButton>
                                                    <telerik:RadButton Style="{StaticResource RadButtonStyle}" 
                                                                   Content="정지" 
                                                                   Width="80"
                                                                   Command="{Binding DataContext.MoveStopCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                                   CommandParameter="{Binding DataContext.BxAxis, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                   Margin="2">
                                                    </telerik:RadButton>
                                                </StackPanel>
                                            </DataTemplate>
                                        </telerik:GridViewDataColumn.CellTemplate>
                                    </telerik:GridViewDataColumn>
                                </telerik:RadGridView.Columns>
                            </telerik:RadGridView>

                            <local:MotorStateControl DataContext="{Binding BxAxis}" Margin="5"/>
                        </StackPanel>
                    </telerik:GroupBox>
                        
                </Grid>
                <Grid local:GridHelper.Rows="*, Auto" Grid.Column="1">
                    <telerik:GroupBox Style="{StaticResource GroupBoxStyle}" Header="H-Z"
                    Margin="5"
                    Grid.Row="0" Grid.RowSpan="2">
                        <StackPanel Orientation="Vertical" Margin="5">
                            <telerik:RadGridView
                              Style="{StaticResource RadGridViewStyle}"
                              ItemsSource="{Binding Bz1Axis.PositionList}"
                              FontSize="16"
                              ShowGroupPanel="False"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              CanUserDeleteRows="False"
                              SelectionMode="Single"
                              GridLinesVisibility="None"
                              MinHeight="250"
                              Margin="5">

                                <telerik:RadGridView.Columns>
                                    <telerik:GridViewDataColumn Header="이름"
                                                          DataMemberBinding="{Binding Name}"
                                                          Width="*"
                                                          SortMemberPath="Name"/>
                                    <telerik:GridViewDataColumn Header="위치"
                                                          DataMemberBinding="{Binding Position, StringFormat=F3}"
                                                          Width="100"
                                                          SortMemberPath="Location"/>
                                    <telerik:GridViewDataColumn Header="속도"
                                                          DataMemberBinding="{Binding Speed, StringFormat=F2}"
                                                          Width="100"
                                                          SortMemberPath="Speed"/>
                                    <telerik:GridViewDataColumn Header="동작" Width="200">
                                        <telerik:GridViewDataColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <telerik:RadButton Style="{StaticResource RadButtonStyle}" 
                                                                   Content="이동" 
                                                                   Width="80"
                                                                   Command="{Binding DataContext.MovePositionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                                   Margin="2">
                                                        <telerik:RadButton.CommandParameter>
                                                            <MultiBinding Converter="{StaticResource TupleConverter}">
                                                                <Binding Path="DataContext.Bz1Axis" RelativeSource="{RelativeSource AncestorType=UserControl}"/>
                                                                <Binding/>
                                                            </MultiBinding>
                                                        </telerik:RadButton.CommandParameter>
                                                    </telerik:RadButton>
                                                    <telerik:RadButton Style="{StaticResource RadButtonStyle}" 
                                                                    Content="정지" 
                                                                    Width="80"
                                                                    Command="{Binding DataContext.MoveStopCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                                    CommandParameter="{Binding DataContext.Bz1Axis, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                    Margin="2">
                                                    </telerik:RadButton>
                                                </StackPanel>
                                            </DataTemplate>
                                        </telerik:GridViewDataColumn.CellTemplate>
                                    </telerik:GridViewDataColumn>
                                </telerik:RadGridView.Columns>
                            </telerik:RadGridView>

                            <local:MotorStateControl DataContext="{Binding Bz1Axis}" Margin="5"/>
                        </StackPanel>
                    </telerik:GroupBox>
                </Grid>
                <Grid local:GridHelper.Rows="*, Auto" Grid.Column="2">
                    <telerik:GroupBox Style="{StaticResource GroupBoxStyle}" Header="h-z"
                                    Margin="4" Grid.Row="0" Grid.RowSpan="2">
                        <StackPanel Orientation="Vertical" Margin="5">
                            <telerik:RadGridView
                                  Style="{StaticResource RadGridViewStyle}"
                                  ItemsSource="{Binding Bz2Axis.PositionList}"
                                  FontSize="16"
                                  ShowGroupPanel="False"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  CanUserDeleteRows="False"
                                  SelectionMode="Single"
                                  GridLinesVisibility="None"
                                MinHeight="250"
                                Margin="5">

                                <telerik:RadGridView.Columns>
                                    <telerik:GridViewDataColumn Header="이름"
                                                          DataMemberBinding="{Binding Name}"
                                                          Width="*"
                                                          SortMemberPath="Name"/>
                                    <telerik:GridViewDataColumn Header="위치"
                                                          DataMemberBinding="{Binding Position, StringFormat=F3}"
                                                          Width="100"
                                                          SortMemberPath="Location"/>
                                    <telerik:GridViewDataColumn Header="속도"
                                                          DataMemberBinding="{Binding Speed, StringFormat=F2}"
                                                          Width="100"
                                                          SortMemberPath="Speed"/>
                                    <telerik:GridViewDataColumn Header="동작" Width="200">
                                        <telerik:GridViewDataColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <telerik:RadButton Style="{StaticResource RadButtonStyle}" 
                                                                   Content="이동" 
                                                                   Width="80"
                                                                   Command="{Binding DataContext.MovePositionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                                   Margin="2">
                                                        <telerik:RadButton.CommandParameter>
                                                            <MultiBinding Converter="{StaticResource TupleConverter}">
                                                                <Binding Path="DataContext.Bz2Axis" RelativeSource="{RelativeSource AncestorType=UserControl}"/>
                                                                <Binding/>
                                                            </MultiBinding>
                                                        </telerik:RadButton.CommandParameter>
                                                    </telerik:RadButton>
                                                    <telerik:RadButton Style="{StaticResource RadButtonStyle}" 
                                                                   Content="정지" 
                                                                   Width="80"
                                                                   Command="{Binding DataContext.MoveStopCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                                   CommandParameter="{Binding DataContext.Bz2Axis, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                   Margin="2">
                                                    </telerik:RadButton>
                                                </StackPanel>
                                            </DataTemplate>
                                        </telerik:GridViewDataColumn.CellTemplate>
                                    </telerik:GridViewDataColumn>
                                </telerik:RadGridView.Columns>
                            </telerik:RadGridView>

                            <local:MotorStateControl DataContext="{Binding Bz2Axis}" Margin="5"/>
                        </StackPanel>
                    </telerik:GroupBox>
                </Grid>
            </Grid>
        </telerik:RadTabItem>
        <telerik:RadTabItem Style="{StaticResource RadTabItemStyle}" Header="W-Table">
            <Grid local:GridHelper.Columns="1*, 1*">
                <Grid local:GridHelper.Rows="*, Auto">
                    <telerik:GroupBox Style="{StaticResource GroupBoxStyle}" Header="W-Y"
                                Margin="4"
                                Grid.Row="0" Grid.RowSpan="2">
                        <StackPanel Orientation="Vertical" Margin="5">


                            <telerik:RadGridView
                                Style="{StaticResource RadGridViewStyle}"
                                ItemsSource="{Binding WyAxis.PositionList}"
                                FontSize="16"
                                ShowGroupPanel="False"
                                AutoGenerateColumns="False"
                                IsReadOnly="True"
                                CanUserDeleteRows="False"
                                SelectionMode="Single"
                                GridLinesVisibility="None"
                                MinHeight="250"
                                Margin="5">

                                <telerik:RadGridView.Columns>
                                    <telerik:GridViewDataColumn Header="이름"
                                                        DataMemberBinding="{Binding Name}"
                                                        Width="*"
                                                        SortMemberPath="Name"/>
                                    <telerik:GridViewDataColumn Header="위치"
                                                        DataMemberBinding="{Binding Position, StringFormat=F3}"
                                                        Width="100"
                                                        SortMemberPath="Location"/>
                                    <telerik:GridViewDataColumn Header="속도"
                                                        DataMemberBinding="{Binding Speed, StringFormat=F2}"
                                                        Width="100"
                                                        SortMemberPath="Speed"/>
                                    <telerik:GridViewDataColumn Header="동작" Width="200">
                                        <telerik:GridViewDataColumn.CellTemplate>
                                            <DataTemplate>
