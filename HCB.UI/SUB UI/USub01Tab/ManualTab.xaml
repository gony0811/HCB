                            FontSize="16"
                            ShowGroupPanel="False"
                            AutoGenerateColumns="False"
                            IsReadOnly="True"
                            CanUserDeleteRows="False"
                            SelectionMode="Single"
                            MinHeight="250"
                            GridLinesVisibility="None" Margin="5">

                                <telerik:RadGridView.Columns>
