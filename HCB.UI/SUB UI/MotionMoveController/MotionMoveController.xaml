<UserControl x:Class="HCB.UI.MotionMoveController"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             xmlns:local="clr-namespace:HCB.UI"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <telerik:RadTabControl TabStripPlacement="Top" SelectedIndex="0">
            <telerik:RadTabItem Header="위치 이동">
                <Grid local:GridHelper.Columns="1*, 1*" local:GridHelper.Rows="40, 1*, 40">

                    <Grid Grid.Row="0" Grid.Column="0" local:GridHelper.Columns="1*, 1*">
                        <TextBlock Text="Min" Background="#FF444444" Foreground="White" TextAlignment="Center" VerticalAlignment="Stretch" Padding="0,10"/>
                        <Border BorderBrush="Gray" BorderThickness="1" Grid.Column="1">
                            <TextBlock Text="{Binding Axis.LimitMinPosition}" VerticalAlignment="Center" TextAlignment="Center"/>
                        </Border>
                    </Grid>

                    <Grid Grid.Row="0" Grid.Column="1" local:GridHelper.Columns="1*, 1*">
                        <TextBlock Text="Max" Background="#FF444444" Foreground="White" Grid.Column="0" TextAlignment="Center" VerticalAlignment="Stretch" Padding="0,10"/>
                        <Border BorderBrush="Gray" BorderThickness="1" Grid.Column="1">
                            <TextBlock Text="{Binding Axis.LimitMaxPosition}" VerticalAlignment="Center" TextAlignment="Center"/>
                        </Border>
                    </Grid>

                    <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" 
                                Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <StackPanel Orientation="Horizontal" Margin="0,0,10,0">
                            <TextBlock Text="Position (" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Axis.Unit}" VerticalAlignment="Center"/>
                            <TextBlock Text=")" VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBox Text="{Binding Pitch}" TextAlignment="Center" Width="120" Height="30" VerticalContentAlignment="Center"/>
                    </StackPanel>

                    <Button Grid.Row="2" Grid.Column="0" Content="절대 이동" 
                             Command="{Binding AbsoluteMoveCommand}" Margin="5,2"/>
                    <Button Grid.Row="2" Grid.Column="1" Content="상대 이동" 
                            Command="{Binding RelativeMoveCommand}" Margin="5,2"/>

                </Grid>
            </telerik:RadTabItem>
            <telerik:RadTabItem Header="조그 이동">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Button Content="+" Margin="2" Width="120" Height="120" FontSize="50">
                        <i:Interaction.Triggers>

                            <!-- 누르는 순간 -->
                            <i:EventTrigger EventName="PreviewMouseLeftButtonDown">
                                <i:InvokeCommandAction
                                    Command="{Binding JogPlusCommand}" />
                            </i:EventTrigger>

                            <!-- 떼는 순간 -->
                            <i:EventTrigger EventName="PreviewMouseLeftButtonUp">
                                <i:InvokeCommandAction
                                    Command="{Binding JogStopCommand}" />
                            </i:EventTrigger>

                            <!-- 버튼 밖으로 벗어났을 때 (중요) -->
                            <i:EventTrigger EventName="LostMouseCapture">
                                <i:InvokeCommandAction
                                    Command="{Binding JogStopCommand}" />
                            </i:EventTrigger>

                        </i:Interaction.Triggers>
                    </Button>
                    <Button Content="-" Grid.Row="1" Margin="1" Width="120" Height="120" FontSize="50">
                        <i:Interaction.Triggers>
                            <!-- 누르는 순간 -->
                            <i:EventTrigger EventName="PreviewMouseLeftButtonDown">
                                <i:InvokeCommandAction
                                    Command="{Binding JogMinusCommand}" />
                            </i:EventTrigger>

                            <!-- 떼는 순간 -->
                            <i:EventTrigger EventName="PreviewMouseLeftButtonUp">
                                <i:InvokeCommandAction
                                    Command="{Binding JogStopCommand}" />
                            </i:EventTrigger>

                            <!-- 버튼 밖으로 벗어났을 때 (중요) -->
                            <i:EventTrigger EventName="LostMouseCapture">
                                <i:InvokeCommandAction
                                    Command="{Binding JogStopCommand}" />
                            </i:EventTrigger>

                        </i:Interaction.Triggers>
                    </Button>
                </Grid>
            </telerik:RadTabItem>
        </telerik:RadTabControl>
        <Grid Grid.Column="1" Margin="10" Width="50">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Text="속도" TextAlignment="Center"/>
            <telerik:RadSlider 
                    Grid.Row="1"
                    Orientation="Vertical"
                    Margin="4"
                    HorizontalAlignment="Center"
                    Minimum="{Binding Axis.LimitMinSpeed}"
                    Maximum="{Binding Axis.LimitMaxSpeed}"
                    SmallChange="0.1" 
                    LargeChange="0.5" 
                    TickFrequency="0.1" 
                    IsSnapToTickEnabled="True" 
                    Value="{Binding Axis.SetSpeed}"
                    TickPlacement="BottomRight" StepAction="ChangeRange"
                    SelectionStart="{Binding Axis.LimitMinSpeed}"
                    SelectionEnd="{Binding Axis.LimitMaxSpeed}"/>
            <TextBox Grid.Row="2" HorizontalAlignment="Center">
                <TextBox.Text>
                    <Binding Path="Axis.SetSpeed" 
                             UpdateSourceTrigger="PropertyChanged" 
                             StringFormat="N1">
                        <Binding.ValidationRules>
                            <ExceptionValidationRule />
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>
        </Grid>
        
    </Grid>
    
</UserControl>
