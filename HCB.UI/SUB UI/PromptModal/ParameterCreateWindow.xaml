<local:DialogWindowBase x:Class="HCB.UI.ParameterCreateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        xmlns:local="clr-namespace:HCB.UI"
        mc:Ignorable="d"                     
        Header="{Binding Title}" Style="{StaticResource RadWindowStyle}">
    <Border Padding="16">
        <StackPanel>
            <telerik:HighlightTextBlock Style="{StaticResource HighlightTextBlockStyle}" Text="파라미터 이름" Margin="0,0,0,6"/>
            <telerik:RadWatermarkTextBox Style="{StaticResource RadWatermarkTextBoxStyle}" MinWidth="150" Text="{Binding Value.Name, UpdateSourceTrigger=PropertyChanged}"/>

            <telerik:HighlightTextBlock Style="{StaticResource HighlightTextBlockStyle}" Text="설정치" Margin="0,0,0,6" />
            <telerik:RadWatermarkTextBox Style="{StaticResource RadWatermarkTextBoxStyle}" Text="{Binding Value.Value, UpdateSourceTrigger=PropertyChanged}" 
                  local:NumericTextBox.IsEnabled="True"
                  local:NumericTextBox.AllowDecimal="True"
                  local:NumericTextBox.AllowNegative="True"/>

            <telerik:HighlightTextBlock Style="{StaticResource HighlightTextBlockStyle}" Text="값 타입"/>
            <telerik:RadComboBox Style="{StaticResource RadComboBoxStyle}" ItemsSource="{Binding ValueTypes}"
                   DisplayMemberPath="Name"
                   SelectedValuePath="Id"
                   SelectedValue="{Binding Value.ValueTypeId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />


            <telerik:HighlightTextBlock Style="{StaticResource HighlightTextBlockStyle}" Text="단위"/>
            <telerik:RadComboBox Style="{StaticResource RadComboBoxStyle}" ItemsSource="{Binding Units}"
                   DisplayMemberPath="Name"
                   SelectedValuePath="Id"
                   SelectedValue="{Binding Value.UnitId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <telerik:RadButton Style="{StaticResource RadButtonStyle}" Content="저장" Width="80" Command="{Binding OkCommand}" Margin="0,0,5,0"></telerik:RadButton>
                <telerik:RadButton Style="{StaticResource RadButtonStyle}" Content="취소"  Width="80" Command="{Binding CancelCommand}"/>
            </StackPanel>

        </StackPanel>
    </Border>
</local:DialogWindowBase>
