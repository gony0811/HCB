<UserControl x:Class="HCB.UI.StateCell"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             mc:Ignorable="d"
             x:Name="root"
             Background="Transparent">

    <StackPanel Orientation="Horizontal"
                Margin="6">

        <Ellipse Width="14"
                 Height="14"
                 Margin="0,0,6,0">
            <Ellipse.Style>
                <Style TargetType="Ellipse">
                    <Setter Property="Fill" Value="#444"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsOn, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                     Value="True">
                            <Setter Property="Fill" Value="#00E676"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Ellipse.Style>
        </Ellipse>

        <!-- ● 라벨 -->
        <telerik:HighlightTextBlock
                       Grid.Column="2"
                       Style="{StaticResource HighlightTextBlockStyle}"
                       VerticalAlignment="Center"
                       FontSize="{Binding FontSize, ElementName=root}"  
                       FontWeight="SemiBold"
                       TextTrimming="CharacterEllipsis"
                       Text="{Binding Label, ElementName=root}" />
    </StackPanel>
</UserControl>
