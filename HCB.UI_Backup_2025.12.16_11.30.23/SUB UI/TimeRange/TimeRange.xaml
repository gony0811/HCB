<UserControl x:Class="HCB.UI.TimeRange"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HCB.UI"
             mc:Ignorable="d" >
    <Grid local:GridHelper.Rows="1*, 1*">
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock Text="{Binding StartTime}"/>
            <TextBlock Text=" ~ " />
            <TextBlock Text="{Binding EndTime}"/>
        </StackPanel>
        
        
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock Text="소요시간: " FontWeight="Bold"/>
            <TextBlock Text="{Binding ElapsedTime}" Grid.Row="1" Grid.ColumnSpan="3" HorizontalAlignment="Center" />
        </StackPanel>
    </Grid>
</UserControl>
