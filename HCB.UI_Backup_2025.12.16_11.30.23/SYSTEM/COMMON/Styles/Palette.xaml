<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation">
    <!---->
    
    <!-- 팔레트 -->
    <SolidColorBrush x:Key="DG.Foreground"        Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="DG.HeaderForeground"  Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="DG.HoverOverlay"      Color="#1AFFFFFF"/>
    <!-- 10% 흰색 -->
    <SolidColorBrush x:Key="DG.SelectOverlay"     Color="#330767B3"/>
    <!-- 20% 하이라이트 -->
    <SolidColorBrush x:Key="DG.Separator"         Color="#FF16233B"/>
    <!-- 구분선 색상 -->

    <SolidColorBrush x:Key="Btn.Bg"           Color="#223149"/>
    <!-- 기본: #18253D 보다 밝음 -->
    <SolidColorBrush x:Key="Btn.Bg.Hover"     Color="#2A3D5C"/>
    <!-- 호버: 조금 더 밝게 -->
    <SolidColorBrush x:Key="Btn.Bg.Pressed"   Color="#1A2942"/>
    <!-- 눌림: 살짝 어둡게 -->
    <SolidColorBrush x:Key="Btn.Fg"           Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="Btn.DisabledBg"   Color="#141F35"/>
    <SolidColorBrush x:Key="Btn.DisabledFg"   Color="#80FFFFFF"/>
    <SolidColorBrush x:Key="Brush.Panel"      Color="#FF0B1628"/>
    <!-- 기존 -->
    <SolidColorBrush x:Key="Border.Bg" Color="#385379"/>
    <SolidColorBrush x:Key="Palette.Dark.Blue"    Color="#1D2E4A"/>
    <SolidColorBrush x:Key="Palette.DeepDark.Blue"    Color="#1D2E4A"/>
    <SolidColorBrush x:Key="Palette.Light.Blue"     Color="#2A3D5C"/>
    <!-- TextBox 팔레트 -->
    <SolidColorBrush x:Key="Brush.Input.Bg"              Color="#14233B"/>
    <!-- 패널보다 한 톤 밝음 -->
    <SolidColorBrush x:Key="Brush.Input.Border"          Color="#16233B"/>
    <!-- 기본 테두리(구분선 톤과 통일) -->
    <SolidColorBrush x:Key="Brush.Input.Border.Hover"    Color="#1D2E4A"/>
    <!-- Hover -->
    <SolidColorBrush x:Key="Brush.Input.Border.Focus"    Color="#0767B3"/>
    <!-- Focus(액센트) -->
    <SolidColorBrush x:Key="Brush.Input.Fg"              Color="#FFFFFFFF"/>
    <!-- 본문 글자 -->
    <SolidColorBrush x:Key="Brush.Input.Fg.Muted"        Color="#B3FFFFFF"/>
    <!-- 힌트/보조 -->
    <SolidColorBrush x:Key="Brush.Input.Selection"       Color="#2A86D7"/>
    <!-- 선택 영역 -->

    <SolidColorBrush x:Key="Btn.Circle.Outer"   Color="#16233B"/>
    <SolidColorBrush x:Key="Btn.Circle.Bg"        Color="#223149"/>
    <SolidColorBrush x:Key="Btn.Circle.Bg.Hover"  Color="#2A3D5C"/>
    <SolidColorBrush x:Key="Btn.Circle.Bg.Down"   Color="#1A2942"/>
    <SolidColorBrush x:Key="Btn.Circle.Fg"        Color="#FFFFFFFF"/>

    <SolidColorBrush x:Key="Switch.Track.Off"     Color="#16233B"/>
    <SolidColorBrush x:Key="Switch.Track.On"      Color="#0767B3"/>
    <SolidColorBrush x:Key="Switch.Knob"          Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="Switch.Knob.Shadow"   Color="#33000000"/>

    <SolidColorBrush x:Key="Tgl.Bg"            Color="#3A7AFE"/>
    <SolidColorBrush x:Key="Tgl.Fg"            Color="White"/>
    <SolidColorBrush x:Key="Tgl.CheckedBg"     Color="#2A5ED6"/>
    <SolidColorBrush x:Key="Tgl.CheckedFg"     Color="White"/>
    <SolidColorBrush x:Key="Tgl.DisabledBg"    Color="#E0E0E0"/>
    <SolidColorBrush x:Key="Tgl.DisabledFg"    Color="#9E9E9E"/>
    <SolidColorBrush x:Key="Tgl.IndeterminateBg" Color="#607D8B"/>
    <SolidColorBrush x:Key="Tgl.FocusBorder"   Color="#80FFFFFF"/>

</ResourceDictionary>